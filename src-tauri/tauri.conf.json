{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "opendaw-desktop",
  "version": "0.1.0",
  "identifier": "org.opendaw.dev",
  "build": {
    "frontendDist": "../packages/app/studio/dist/",
    "devUrl": "https://localhost:8080",
    "beforeDevCommand": "npm run dev:studio",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "openDaw.desktop",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "headers": {
        "Cross-Origin-Opener-Policy": "same-origin",
        "Cross-Origin-Embedder-Policy": "require-corp"
      },
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
